<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/row_book_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/javabook"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/row_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teach Yourself"
            android:layout_below="@+id/row_book_img"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/row_book_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programming"
            android:textColor="#000"
            android:layout_below="@+id/row_book_name"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/row_book_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_info"
            android:layout_below="@+id/row_book_img"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>